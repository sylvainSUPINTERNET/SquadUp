<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UserDetail"
    tools:showIn="@layout/app_bar_user_detail">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="370dp"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="330dp">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="111dp"
                    android:layout_height="125dp"
                    android:layout_alignBottom="@+id/nb_profiles"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="58dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilepic" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="48dp"
                    android:fontFamily="@font/main_font"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:text="TITLE"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />


                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/title"
                    android:layout_below="@+id/title"
                    android:layout_marginStart="0dp"
                    android:fontFamily="@font/content"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:text="email@email.fr"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="47dp"
                    android:fontFamily="@font/content"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:text="DESC"
                    android:textColor="#666"
                    android:textSize="14dp"
                    tools:layout_editor_absoluteX="33dp"
                    tools:layout_editor_absoluteY="284dp" />


                <TextView
                    android:id="@+id/nb_profiles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="135dp"
                    android:fontFamily="@font/content"
                    android:textColor="#2BCA8B"
                    tools:text="" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</android.support.constraint.ConstraintLayout>